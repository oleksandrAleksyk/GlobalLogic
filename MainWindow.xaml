<Window x:Class="Global_Logic_Wfp_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Globla_Logic_Wfp_App"
        mc:Ignorable="d"
        Title="GlobalLogicTest" FontFamily="Times New Roman" FontSize="14" Topmost="True">
    <Grid AutomationProperties.Name="TextBox">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Your folder path....." VerticalAlignment="Top" Width="229" />
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="35" Margin="5,4,0,0" VerticalAlignment="Top" Width="364"/>
        <Button x:Name="button" Content="Choose folder" HorizontalAlignment="Left" Margin="271,10,0,0" VerticalAlignment="Top" Width="87" Height="23" Click="Button_Click"/>
        <TextBox x:Name="displayInfo" HorizontalAlignment="Left" Margin="10,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="740" Height="450" UndoLimit="0" />
    </Grid>
</Window>
